
@{
    Layout = null;
    var user = Session["USER_BO"] as Roomy.Models.User;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>BackOffice| @ViewBag.Title</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/roomy.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h2> Back Office </h2>
        <nav class="navbar navbar-expand-lg navbar-light bg-warning">
            <a class="navbar-brand" href="@Url.Action("Index","Dashboard")"> BackOffice </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href=" @Url.Action("Index","Home",new { area = "" }) ">App</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Salles
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index","Rooms")">Voir</a>
                            <a class="dropdown-item" href="@Url.Action("Create","Rooms")">Ajouter</a>
                        </div>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Categories
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="@Url.Action("Index","Categories")">Voir</a>
                            <a class="dropdown-item" href="@Url.Action("Create","Categories")">Ajouter</a>
                        </div>
                    </li>
                </ul>
                <span class="navbar-text">
                    Bonjour @user.Firstname @user.Lastname
                    <a href="@Url.Action("Logout","Authentication")" class="btn btn-danger"><i class="fa fa-sign-out"></i></a>
                </span>
            </div>
        </nav>
        @if (TempData["Message"] != null)
        {
            <div class="alert alert-@TempData["MessageType"].ToString()">@TempData["Message"].ToString()</div>
        }
        @RenderBody()
        <footer class="bg-warning">
            &copy; BACKOFFICE POEC Rouen 2018

        </footer>
    </div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/popper-utils.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("SectionScripts", false)
    <!-- false car lang=" vue n'est pas obligée de fournir la section" -->
</body>
</html>
>